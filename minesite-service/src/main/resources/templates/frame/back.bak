

<#macro Pager pageInfo>
<div style="text-align: center">
    <#assign leftleft="disabled"/>
    <#assign left="disabled"/>
    <#assign right="disabled"/>
    <#assign rightright="disabled"/>

    <#if pageInfo.hasPrev>
        <#assign leftleft="red"/>
        <#assign left="orange"/>
    </#if>
    <#if pageInfo.hasNext>
        <#assign right="orange"/>
        <#assign rightright="red"/>
    </#if>

    <div class="ui buttons">
        <a href="?pageNo=1" class="ui icon ${leftleft} button">1<i class="angle double left icon"></i></a>

        <a href="?pageNo=${pageInfo.pageNo-1}" class="ui button ${left}"><</a>
        <div class="or" data-text="${pageInfo.pageNo}"></div>
        <a href="?pageNo=${pageInfo.pageNo+1}" class="ui button ${right}">></a>

        <a href="?pageNo=${pageInfo.totalPage}" class="ui right icon ${rightright} button"><i class="angle double right icon"></i>${pageInfo.totalPage}</a>
    </div>
</div>
</#macro>